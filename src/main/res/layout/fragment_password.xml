<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔐 Password Tools"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="?attr/colorOnBackground" />

    <EditText
        android:id="@+id/et_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password to check"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_check_strength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Strength"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_strength_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password strength will appear here"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        android:textColor="?attr/colorOnBackground" />

    <Button
        android:id="@+id/btn_generate_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔑 Generate Strong Password"
        android:layout_marginBottom="16dp" />

    <!-- Generated Password Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_gradient_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generated Password:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="?attr/colorOnBackground" />

        <TextView
            android:id="@+id/tv_generated_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="monospace"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btn_copy_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Copy Password"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout> 